# THIS REQUIRE JAVA VERSION 8

export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_281.jdk/Contents/Home
export PATH=$JAVA_HOME/bin:$PATH

# DOCKER UP
docker run -d \
  --name etcd \
  -p 2379:2379 \
  -p 2380:2380 \
  quay.io/coreos/etcd:v3.5.11 \
  /usr/local/bin/etcd \
  --name s1 \
  --data-dir /etcd-data \
  --listen-client-urls http://0.0.0.0:2379 \
  --advertise-client-urls http://0.0.0.0:2379 \
  --initial-advertise-peer-urls http://0.0.0.0:2380 \
  --listen-peer-urls http://0.0.0.0:2380 \
  --initial-cluster s1=http://0.0.0.0:2380 \
  --initial-cluster-state new

# ZOOKEEPER
bin/zkServer.sh start

#SERVER
mvn exec:java -Dexec.mainClass="ds.tutorials.communication.server.ConcertServer" \-Dexec.args="50052 127.0.0.1:2379 ./data"

#CLIENT
mvn exec:java -pl client \
  -Dexec.mainClass="ds.tutorials.communication.client.ConcertClient" \
  -Dexec.args="http://127.0.0.1:2379 50052"